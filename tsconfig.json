{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./config/typescript/tsconfig.json",
  "display": "Root Project Configuration",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve",
    "tsBuildInfoFile": "./.cache/tsconfig.root.tsbuildinfo",
    "paths": {
      "@": [
        "."
      ],
      "@/*": [
        "*"
      ],
      "@/components": [
        "components/index.ts"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/styles": [
        "styles/index.ts"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/molecules": [
        "components/ui/molecules/index.ts"
      ],
      "@/organisms": [
        "components/ui/organisms/index.ts"
      ],
      "@/atoms": [
        "components/ui/atoms/index.ts"
      ],
      "@/components/auth": [
        "components/auth/index.ts"
      ],
      "@/components/marketing": [
        "components/marketing/index.ts"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/scripts/*": [
        "scripts/*"
      ]
    }
  },
  "typeAcquisition": {
    "enable": false
  },
  "exclude": [
    "node_modules",
    "scripts/codemods/_archive/**/*",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.test.ts",
    "components/auth/examples/**/*.example.tsx",
    "grid-reference",
    "docs/examples/**/*"
  ],
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "config/**/*.ts",
    "eslint-plugin-corso/**/*",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "proxy.ts",
    "next-env.d.ts",
    "scripts/**/*.ts",
    "scripts/**/*.tsx",
    "styles/**/*.ts",
    "styles/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "types/**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts"
  ]
}

