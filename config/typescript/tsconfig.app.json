{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "display": "Next.js App Configuration",
  "compilerOptions": {
    "composite": true,
    "plugins": [{ "name": "next" }],
    "tsBuildInfoFile": "../../.cache/tsconfig.app.tsbuildinfo"
  },
  "references": [
    { "path": "./tsconfig.types.json" },
    { "path": "./tsconfig.lib.json" },
    { "path": "./tsconfig.styles.json" },
    { "path": "./tsconfig.components.json" }
  ],
  "include": [
    "../../app/**/*.ts",
    "../../app/**/*.tsx",
    "../../actions/**/*.ts",
    "../../config/**/*.ts",
    "../../middleware.ts",
    "../../middleware/**/*.ts",
    "../../next-env.d.ts",
    "../../.next/types/**/*.ts"
  ],
  "exclude": ["../../node_modules", "../../.next"]
} 
