{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "display": "Types Project",
  "compilerOptions": {
    "composite": true,
    "rootDir": "../..",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "../../.typegen",
    "tsBuildInfoFile": "../../.cache/tsconfig.types.tsbuildinfo"
  },
  "include": [
    "../../types/**/*.ts",
    "../../types/**/*.tsx",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "../../build"
  ]
}


