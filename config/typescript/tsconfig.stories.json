{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "display": "Stories (isolated)",
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "types": ["vite/client", "node"],
    "baseUrl": "../..",
    "tsBuildInfoFile": "../../.cache/tsconfig.stories.tsbuildinfo"
  },
  "include": [
    "../../components/**/*.stories.ts",
    "../../components/**/*.stories.tsx",
    "../../components/**/*.mdx",
    "../../stories/**/*.ts",
    "../../stories/**/*.tsx",
    "../../stories/**/*.mdx",
    "../../components/**/*.ts",
    "../../components/**/*.tsx",
    "../../lib/**/*.ts",
    "../../lib/**/*.tsx",
    "../../types/**/*.ts",
    "../../types/**/*.tsx",
    "../../contexts/**/*.ts",
    "../../contexts/**/*.tsx",
    "../../hooks/**/*.ts",
    "../../hooks/**/*.tsx",
    "../../styles/**/*.ts",
    "../../styles/**/*.tsx",
    "../../tools/**/*.ts",
    "../../tools/**/*.tsx"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "../../build",
    "../../.next",
    "../../stories"
  ]
}


