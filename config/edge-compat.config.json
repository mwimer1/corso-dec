{
  "roots": ["app", "middleware.ts", "src/middleware.ts"],
  "denyNodeCore": [
    "assert","async_hooks","buffer","child_process","cluster","crypto",
    "dgram","dns","domain","events","fs","http","https","http2","inspector",
    "module","net","os","path","perf_hooks","process","punycode","querystring",
    "readline","repl","stream","string_decoder","sys","timers","tls","trace_events",
    "tty","url","util","v8","vm","wasi","worker_threads","zlib","node:assert","node:fs","node:crypto","node:path"
  ],
  "denyPackages": [
    "pg","mysql2","better-sqlite3","oracledb","mssql","knex",
    "redis","ioredis","kafkajs","amqplib","ws",
    "node-fetch","form-data","sharp","nock"
  ],
  "allowPackages": ["next","next/server","next/headers","next/cache","@upstash/redis","@vercel/kv"],
  "allowProcessEnvPublicPrefix": "NEXT_PUBLIC_"
}

